  "license": "ISC",
  "dependencies": {
    "chokidar": "^3.5.1",
    "internet-available": "^1.0.0",
    "ip": "^1.1.5",
    "public-ip": "^4.0.3",
    "serve-static": "^1.14.1",
    "tcp-port-used": "^1.0.2",
    "ws": "^8.4.2"
  },
  "devDependencies": {
    "esbuild": "^0.11.20"
  },
  "publishConfig": {
    "access": "public"
  }
}
