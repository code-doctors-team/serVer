    "boxen": "^5.1.2",
    "chalk": "4.1.2",
    "commander": "^8.3.0",
    "compress-images": "^2.0.4",
    "ejs": "^3.1.6",
    "esbuild": "^0.14.9",
    "fast-glob": "^3.2.7",
    "gifsicle": "^5.2.1",
    "open": "^8.4.0",
    "patch-package": "^6.4.7",
    "pngquant-bin": "^6.0.1",
    "require-from-string": "^2.0.2",
    "resolve": "^1.21.0",
    "serve-static": "^1.14.2"
